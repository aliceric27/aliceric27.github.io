body > a > svg{
    @media (max-width: 400px) {
        width: 50px;
        height: 50px;
    }
}

@media (min-width: 992px) {
    .post-body {
        text-align: left;
    }
}

code{
    background-color: #d5d5d5;
    color: #c20e0e;
    padding: 2px 5px;
}

.column{
    background-color: #ffffff;
}

.posts-expand .post-block:not(:first-of-type) {
    margin-top: 10%;
    position: relative;

}

.site-brand-container {
    display: flex;
    flex-shrink: 0;
    padding:0;
}

.post-body p img {
    max-width: 600px;
    max-height: 500px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    border-radius: 8px;
}